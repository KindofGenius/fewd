= form_for @email_update do |f|
  - if @email_update.errors.any?
    #error_explanation
      %h2= "#{pluralize(@email_update.errors.count, "error")} prohibited this email_update from being saved:"
      %ul
        - @email_update.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .actions
    = f.submit 'Save'
