= form_for @dish_food do |f|
  - if @dish_food.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dish_food.errors.count, "error")} prohibited this dish_food from being saved:"
      %ul
        - @dish_food.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :dish_id
    = f.number_field :dish_id
  .field
    = f.label :food_id
    = f.number_field :food_id
  .actions
    = f.submit 'Save'
