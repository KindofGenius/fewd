    =render "layouts/ga"
    =render "layouts/mixpanel"
    =render "layouts/fb_conversion"
    =render "layouts/segment"
    =render "layouts/pink_chat"
    =render "layouts/facebook_og"
    =render "layouts/twitter_card"
    = stylesheet_link_tag    "application", media: "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
