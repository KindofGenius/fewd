= form_for @diet_dish do |f|
  - if @diet_dish.errors.any?
    #error_explanation
      %h2= "#{pluralize(@diet_dish.errors.count, "error")} prohibited this diet_dish from being saved:"
      %ul
        - @diet_dish.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :dish_id
    = f.number_field :dish_id
  .field
    = f.label :diet_id
    = f.number_field :diet_id
  .actions
    = f.submit 'Save'
