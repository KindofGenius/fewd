= form_for @dish_mood do |f|
  - if @dish_mood.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dish_mood.errors.count, "error")} prohibited this dish_mood from being saved:"
      %ul
        - @dish_mood.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :dish_id
    = f.number_field :dish_id
  .field
    = f.label :mood_id
    = f.number_field :mood_id
  .actions
    = f.submit 'Save'
