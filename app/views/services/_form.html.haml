= form_for @service, :html => { :multipart => true, :class => "form-horizontal" } do |f|
  - if @service.errors.any?
    #error_explanation
      %h2= "#{pluralize(@service.errors.count, "error")} prohibited this service from being saved:"
      %ul
        - @service.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label "Add Service Icon", class: "col-sm-2 control-label"
    .col-sm-6= f.file_field :avatar, class: "form-control"
  .form-group
    = f.label :name, class: "col-sm-2 control-label"
    .col-sm-6= f.text_field :name, class: "form-control"
  .actions
    = f.submit 'Save', class: "btn btn-info"
